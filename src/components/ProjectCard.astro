---
interface Props {
  name: string;
  description: string;
  html_url: string;
  language: string | null;
  stargazers_count: number;
  topics: string[];
}

const { name, description, html_url, language, stargazers_count, topics } = Astro.props;
---

<a
  href={html_url}
  target="_blank"
  rel="noopener noreferrer"
  class="glass glass-hover rounded-xl p-6 block group"
>
  <div class="flex items-start justify-between mb-3">
    <h3 class="text-xl font-semibold text-white group-hover:text-blue-400 transition-colors">
      {name}
    </h3>
    <div class="flex items-center gap-1 text-yellow-400">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
      </svg>
      <span class="text-sm font-medium">{stargazers_count}</span>
    </div>
  </div>
  
  {description && (
    <p class="text-slate-300 text-sm mb-4 line-clamp-2">
      {description}
    </p>
  )}
  
  <div class="flex items-center gap-3 flex-wrap">
    {language && (
      <span class="text-xs px-3 py-1 rounded-full bg-blue-500/20 text-blue-300 border border-blue-500/30">
        {language}
      </span>
    )}
    {topics.slice(0, 3).map((topic) => (
      <span class="text-xs px-3 py-1 rounded-full bg-purple-500/20 text-purple-300 border border-purple-500/30">
        {topic}
      </span>
    ))}
  </div>
</a>
