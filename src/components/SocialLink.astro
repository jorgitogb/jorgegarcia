---
interface Props {
  href: string;
  icon: string;
  label: string;
  color?: string;
}

const { href, icon, label, color = 'blue' } = Astro.props;

const colorClasses = {
  blue: 'hover:text-blue-400 hover:border-blue-400',
  purple: 'hover:text-purple-400 hover:border-purple-400',
  green: 'hover:text-green-400 hover:border-green-400',
  pink: 'hover:text-pink-400 hover:border-pink-400'
};
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={`glass glass-hover flex items-center gap-3 px-6 py-4 rounded-xl transition-all duration-300 ${colorClasses[color as keyof typeof colorClasses]}`}
>
  <span class="text-2xl">{icon}</span>
  <span class="font-medium text-slate-200">{label}</span>
  <svg
    class="ml-auto w-5 h-5 opacity-50 group-hover:opacity-100 transition-opacity"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
    ></path>
  </svg>
</a>
