---
import Layout from '../layouts/Layout.astro';
import SocialLink from '../components/SocialLink.astro';
import ProjectCard from '../components/ProjectCard.astro';

// Fetch GitHub repositories
const username = 'jorgitogb';
let repos = [];

try {
  const response = await fetch(`https://api.github.com/users/${username}/repos?sort=updated&per_page=6`);
  if (response.ok) {
    repos = await response.json();
  }
} catch (error) {
  console.error('Error fetching GitHub repos:', error);
}
---

<Layout
  title="Jorge Garcia Brizuela - Machine Learning Engineer"
  description="Personal website of Jorge Garcia Brizuela, Software Engineer, Data Scientist and full-stack father"
>
  <main class="min-h-screen relative overflow-hidden">
    <!-- Animated background elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-20 left-10 w-72 h-72 bg-blue-500/10 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl animate-float" style="animation-delay: -3s;"></div>
      <div class="absolute top-1/2 left-1/2 w-80 h-80 bg-pink-500/10 rounded-full blur-3xl animate-float" style="animation-delay: -1.5s;"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 container mx-auto px-6 py-20">
      <!-- Hero Section -->
      <section class="max-w-4xl mx-auto text-center mb-20 animate-fade-in-up">
        <div class="mb-8">
          <h1 class="text-6xl md:text-7xl font-bold mb-4 gradient-text">
            Jorge Garcia Brizuela
          </h1>
          <p class="text-2xl md:text-3xl text-slate-300 font-light mb-6">
            Machine Learning Engineer
          </p>
          <p class="text-lg text-slate-400 max-w-2xl mx-auto">
            Co-founder of <span class="text-blue-400 font-semibold">Datamania.io</span> â€¢ 
            Passionate about Deep Learning, Data Science, and AI Innovation
          </p>
        </div>

        <!-- Decorative line -->
        <div class="w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-500 mx-auto rounded-full mb-12 animate-glow"></div>
      </section>

      <!-- Social Links Section -->
      <section class="max-w-3xl mx-auto mb-20 animate-fade-in-up" style="animation-delay: 0.2s;">
        <h2 class="text-3xl font-bold text-center mb-8 text-white">
          Connect With Me
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <SocialLink
            href="https://github.com/jorgitogb"
            icon="ðŸ™"
            label="GitHub"
            color="blue"
          />
          <SocialLink
            href="https://www.linkedin.com/in/jorge-garcia-brizuela-b56669aa/"
            icon="ðŸ’¼"
            label="LinkedIn"
            color="purple"
          />
          <SocialLink
            href="https://orcid.org/0000-0003-0527-1339"
            icon="ðŸŽ“"
            label="ORCID"
            color="green"
          />
        </div>
      </section>

      <!-- Projects Section -->
      {repos.length > 0 && (
        <section class="max-w-6xl mx-auto animate-fade-in-up" style="animation-delay: 0.4s;">
          <h2 class="text-3xl font-bold text-center mb-8 text-white">
            Featured Projects
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {repos.map((repo: any) => (
              <ProjectCard
                name={repo.name}
                description={repo.description}
                html_url={repo.html_url}
                language={repo.language}
                stargazers_count={repo.stargazers_count}
                topics={repo.topics || []}
              />
            ))}
          </div>
        </section>
      )}

      <!-- Footer -->
      <footer class="mt-20 text-center text-slate-500 text-sm">
        <p>Â© {new Date().getFullYear()} Jorge Garcia Brizuela. Built with Astro & Tailwind CSS.</p>
      </footer>
    </div>
  </main>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
